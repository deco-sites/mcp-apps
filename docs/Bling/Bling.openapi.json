  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Contato": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID do contato"
          },
          "nome": {
            "type": "string",
            "description": "Nome do contato"
          },
          "codigo": {
            "type": "string",
            "description": "Código do contato"
          },
          "tipoContato": {
            "type": "string",
            "enum": [
              "C",
              "F",
              "A",
              "T"
            ],
            "description": "Tipo de contato (C: Cliente, F: Fornecedor, A: Ambos, T: Transportador)"
          },
          "situacao": {
            "type": "string",
            "enum": [
              "A",
              "I"
            ],
            "description": "Situação do contato (A: Ativo, I: Inativo)"
          },
          "contribuinte": {
            "type": "string",
            "enum": [
              "1",
              "2",
              "9"
            ],
            "description": "Contribuinte (1: Contribuinte ICMS, 2: Contribuinte isento, 9: Não contribuinte)"
          },
          "documento": {
            "type": "string",
            "description": "CPF ou CNPJ do contato"
          },
          "ie": {
            "type": "string",
            "description": "Inscrição estadual"
          },
          "rg": {
            "type": "string",
            "description": "RG"
          },
          "endereco": {
            "$ref": "#/components/schemas/Endereco"
          },
          "telefone": {
            "type": "string",
            "description": "Telefone"
          },
          "celular": {
            "type": "string",
            "description": "Celular"
          },
          "email": {
            "type": "string",
            "description": "E-mail"
          },
          "dataNascimento": {
            "type": "string",
            "format": "date",
            "description": "Data de nascimento"
          }
        }
      },
      "Endereco": {
        "type": "object",
        "properties": {
          "logradouro": {
            "type": "string",
            "description": "Logradouro"
          },
          "numero": {
            "type": "string",
            "description": "Número"
          },
          "complemento": {
            "type": "string",
            "description": "Complemento"
          },
          "bairro": {
            "type": "string",
            "description": "Bairro"
          },
          "cidade": {
            "type": "string",
            "description": "Cidade"
          },
          "estado": {
            "type": "string",
            "description": "Estado (UF)"
          },
          "cep": {
            "type": "string",
            "description": "CEP"
          }
        }
      },
      "Produto": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID do produto"
          },
          "codigo": {
            "type": "string",
            "description": "Código do produto"
          },
          "nome": {
            "type": "string",
            "description": "Nome do produto"
          },
          "descricao": {
            "type": "string",
            "description": "Descrição do produto"
          },
          "tipo": {
            "type": "string",
            "enum": [
              "P",
              "S"
            ],
            "description": "Tipo do produto (P: Produto, S: Serviço)"
          },
          "situacao": {
            "type": "string",
            "enum": [
              "A",
              "I"
            ],
            "description": "Situação do produto (A: Ativo, I: Inativo)"
          },
          "unidade": {
            "type": "string",
            "description": "Unidade de medida"
          },
          "precoCusto": {
            "type": "number",
            "description": "Preço de custo"
          },
          "precoVenda": {
            "type": "number",
            "description": "Preço de venda"
          },
          "estoque": {
            "type": "number",
            "description": "Quantidade em estoque"
          },
          "gtin": {
            "type": "string",
            "description": "Código GTIN/EAN"
          },
          "gtinEmbalagem": {
            "type": "string",
            "description": "Código GTIN/EAN da embalagem"
          },
          "marca": {
            "type": "string",
            "description": "Marca do produto"
          },
          "categoria": {
            "$ref": "#/components/schemas/Categoria"
          },
          "peso": {
            "type": "number",
            "description": "Peso do produto"
          },
          "altura": {
            "type": "number",
            "description": "Altura do produto"
          },
          "largura": {
            "type": "number",
            "description": "Largura do produto"
          },
          "profundidade": {
            "type": "number",
            "description": "Profundidade do produto"
          }
        }
      },
      "Categoria": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID da categoria"
          },
          "nome": {
            "type": "string",
            "description": "Nome da categoria"
          }
        }
      },
      "Venda": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "ID da venda"
          },
          "numero": {
            "type": "string",
            "description": "Número da venda"
          },
          "data": {
            "type": "string",
            "format": "date-time",
            "description": "Data da venda"
          },
          "dataSaida": {
            "type": "string",
            "format": "date-time",
            "description": "Data de saída"
          },
          "situacao": {
            "type": "string",
            "enum": [
              "Em Aberto",
              "Em Andamento",
              "Concluída",
              "Cancelada"
            ],
            "description": "Situação da venda"
          },
          "contato": {
            "$ref": "#/components/schemas/Contato"
          },
          "itens": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ItemVenda"
            }
          },
          "valorTotal": {
            "type": "number",
            "description": "Valor total da venda"
          },
          "formaPagamento": {
            "type": "string",
            "description": "Forma de pagamento"
          },
          "observacoes": {
            "type": "string",
            "description": "Observações"
          }
        }
      },
      "ItemVenda": {
        "type": "object",
        "properties": {
          "produto": {
            "$ref": "#/components/schemas/Produto"
          },
          "quantidade": {
            "type": "number",
            "description": "Quantidade"
          },
          "valorUnitario": {
            "type": "number",
            "description": "Valor unitário"
          },
          "valorTotal": {
            "type": "number",
            "description": "Valor total"
          },
          "desconto": {
            "type": "number",
            "description": "Desconto"
          }
        }
      }
    }
  }
}