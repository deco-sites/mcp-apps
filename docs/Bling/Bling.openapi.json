          },
          "404": {
            "description": "Produto não encontrado"
          }
        }
      }
    },
    "/vendas": {
      "get": {
        "summary": "Obter vendas",
        "description": "Obtém a lista de vendas",
        "parameters": [
          {
            "name": "pagina",
            "in": "query",
            "schema": {
              "type": "integer"
            },
            "description": "Número da página"
          },
          {
            "name": "limite",
            "in": "query",
            "schema": {
              "type": "integer"
            },
            "description": "Limite de registros por página"
          },
          {
            "name": "situacao",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "Em Aberto",
                "Em Andamento",
                "Concluída",
                "Cancelada"
              ]
            },
            "description": "Situação da venda"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de vendas retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Venda"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autorizado"
          },
          "403": {
