{
  "openapi": "3.0.0",
  "info": {
    "title": "Bling API",
    "description": "API de integração com o sistema Bling ERP",
    "version": "3.0.0",
    "contact": {
      "email": "api@bling.com.br"
    }
  },
  "servers": [
    {
      "url": "https://api.bling.com.br/v3",
      "description": "Servidor de produção"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/contatos": {
      "get": {
        "summary": "Obter contatos",
        "description": "Obtém a lista de contatos",
        "parameters": [
          {
            "name": "pagina",
            "in": "query",
            "schema": {
              "type": "integer"
            },
            "description": "Número da página"
          },
          {
            "name": "limite",
            "in": "query",
            "schema": {
              "type": "integer"
            },
            "description": "Limite de registros por página"
          },
          {
            "name": "tipoContato",
            "in": "query",
            "schema": {
              "type": "string",
              "enum": [
                "C",
                "F",
                "A",
                "T"
              ]
            },
            "description": "Tipo de contato (C: Cliente, F: Fornecedor, A: Ambos, T: Transportador)"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de contatos retornada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Contato"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Não autorizado"
          },
          "403": {
            "description": "Proibido"
          }
        }
      },
      "post": {
        "summary": "Criar contato",
        "description": "Cria um novo contato",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Contato"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Contato criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contato"
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida"
          },
          "401": {
            "description": "Não autorizado"
          },
          "403": {
            "description": "Proibido"
          }
        }
      }
    },
    "/contatos/{idContato}": {
      "get": {
        "summary": "Obter contato",
        "description": "Obtém um contato específico",
        "parameters": [
          {
            "name": "idContato",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID do contato"
          }
        ],
        "responses": {
          "200": {
            "description": "Contato retornado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contato"
                }
              }
            }
          },
          "401": {
            "description": "Não autorizado"
          },
          "403": {
            "description": "Proibido"
          },
          "404": {
            "description": "Contato não encontrado"
          }
        }
      },
      "put": {
        "summary": "Atualizar contato",
        "description": "Atualiza um contato existente",
        "parameters": [
          {
            "name": "idContato",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "ID do contato"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Contato"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Contato atualizado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Contato"
                }
              }
            }
          },
          "400": {
            "description": "Requisição inválida"
          },
          "401": {
            "description": "Não autorizado"
          },
          "403": {
            "description": "Proibido"
          },
          "404": {
            "description": "Contato não encontrado"
          }
        }
      }
    },
